<% layout("/layouts/biolerplate") %>
<body>
    <div class="row show-card">
        <div class="col-8 offset-3 mt-3">
            <h1>TastyTrove Menu</h1>
        </div>
    </div>

    <div class="card col-6 offset-3">
        <img class="card-img-top show-img" src="<%= menu.image %>" alt="menu-image" style="width: 500px; height: 400px; object-fit: cover;">
        <div class="card-body">
            <p class="card-text">
                <b><%= menu.name %></b><br>
                <%= menu.description %><br>
                &#x20B9;<%= menu.price.toLocaleString('en-IN') %>/-<br>
                <% if (menu.isAvailable === "true") { %>
                    Available
                <% } else { %>
                    Not Available
                <% } %><br>
            </p>
        </div>

        <div class="btns mt-3">
            <form method="get" action="/tastytrove/<%= menu._id %>/editMenu">
                <button class="btn btn-dark edit-btn offset-3">Edit</button>
            </form>

            <form method="POST" action="/tastytrove/<%= menu._id %>?_method=Delete">
                <button class="btn btn-dark offset-5">Delete</button>
            </form>
        </div>
    </div>
</body>
