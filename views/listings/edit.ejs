<% layout("/layouts/biolerplate") %>
<body>
    <form method="POST" action="/tastytrove/<%= menu._id %>/menu?_method=PUT" novalidate class="needs-validation">
        <h1>Edit Menu</h1>
        <div class="row">
            <div class="col-8 offset-2">
                <div class="mb-3">
                    <label for="name" class="form-label">Menu Name</label>
                    <input type="text" id="name" name="listing[name]" class="form-control" value="<%= menu.name %>" placeholder="Enter Menu name" required>
                <div class="invalid-feedback">
                    Menu name is required.
                </div>
                </div>

                <div class="mb-3">
                    <label for="description" class="form-label">Menu Description</label>
                    <textarea id="description" name="listing[description]" class="form-control" placeholder="Enter Menu description" required><%= menu.description %></textarea>
                    <div class="invalid-feedback">
                        Menu description is required.
                    </div>
                </div>

                <div class="mb-3">
                    <label for="image" class="form-label">Menu Image</label>
                    <input type="text" id="image" name="listing[image]" class="form-control" value="<%= menu.image %>" placeholder="Enter Menu image">
                </div>

                <div class="mb-3">
                    <label for="price" class="form-label">Menu Price</label>
                    <input type="number" id="price" name="listing[price]" class="form-control" value="<%= menu.price %>" placeholder="Enter Menu price" required>
                    <div class="invalid-feedback">
                        Menu price is required.
                    </div>
                </div>

                <div class="mb-3">
                    <label for="isAvailable" class="form-label">Menu Availability (True/False)</label>
                    <input type="text" id="isAvailable" name="listing[isAvailable]" class="form-control" value="<%= menu.isAvailable %>" placeholder="Enter Menu Availability (True or False)" required>
                    <div class="invalid-feedback">
                        Menu Availablity is required.
                    </div>
                </div>

                <div class="mb-3">
                    <label for="rating" class="form-label">Menu Rating</label>
                    <input type="number" id="rating" name="listing[rating]" class="form-control" value="<%= menu.rating %>" placeholder="Enter Menu rating">
                    <div class="invalid-feedback">
                        Menu rating is required.
                    </div>
                </div>

                <button type="submit" class="btn btn-dark add-btn mt-3">Edit</button>
            </div>
        </div>
    </form>
    <script src="/js/script.js"></script>
</body>
